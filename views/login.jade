extends layout

block content
  .container
    h1 Login Page
    p.lead This is the place where you enter your registered credentials to log in.
    br
    form(role='form', action="/login",method="post", style='width: 100%;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      br
      button.btn.confirm(type='submit', style='width: 100%;') Log in
      &nbsp;
      a(href='/')
        button.btn.cancel(type="button", style='width: 100%;') Cancel