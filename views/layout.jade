doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    style(type='text/css').
      body {
        padding: 50px;
        font: 16px "Lucida Grande", Helvetica, Arial, sans-serif;
        background-color:#7EC0EE; 
      }
      h1 {
      text-align: center;

      }
      input {
        width:100%;
        display:inline;
        border: 1px solid #999;
        font: 18px "Lucida Grande", Helvetica, Arial, sans-serif;
        height: 100px;
        -webkit-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        background-color:#c2e1f7;
      }
      input:active { background:#5886a6 }
      input.dividedInput    {
        width:25%;
        display:inline;
        border: 1px solid #999;
        height: 100px;
        -webkit-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
      }
      input.match{
        background-color:#3a9fe5;
      }
      input.history{
       background-color:#3a9fe5; 
      }
      input.accept    {
        width:50%;
        display:inline;
        border: 1px solid #999;
        background-color: #33FF66;
        height: 100px;
        -webkit-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
      }
      input.form-control{
        height:40px;
        background-color:#ffffff;
      }
      button.btn.confirm{
        height: 40px;
        background-color: #33FF66;
        -webkit-box-shadow: 0px 0px 8px rgba(0, 0, 0, 2);
        -moz-box-shadow: 0px 0px 8px rgba(0, 0, 0, 2);
        box-shadow: 0px 0px 8px rgba(0, 0, 0, 2);
      }
       button.btn.cancel{
        height: 40px;
        background-color: #B33A3A;
        -webkit-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
      }
      input.challenge    {
        width:100%;
        display:inline;
        border: 1px solid #999;
        height: 100px;
        -webkit-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
      }
      input.decline    {
        width:50%;
        display:inline;
        border: 1px solid #999;
        background-color: #B33A3A;
        height: 100px;
        -webkit-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
      }

      form.topNav {
        display:inline;
      }

      p.myFoot {
        text-align: center;
        font: 40px "Lucida Grande", Helvetica, Arial, sans-serif;
        color: #EEAC7E;
      }
      p.inputDescribtion{
        text-align:center;
        font: 16px "Lucida Grande", Helvetica, Arial, sans-serif;
      }
      a.myFoot{
        color: #000000;
      }
      a.mail{
        font: 22px "Lucida Grande", Helvetica, Arial, sans-serif;
        color:black;
      }
      a.aboutLink{
        font: 30px "Lucida Grande", Helvetica, Arial, sans-serif;
        text-align: center;
        font-weight:bold;
        color:#88EE7E;
        width: 100%;
      }
      img{
        display: block;
          margin-left: auto;
          margin-right: auto
      }
      #maincontentbackground {
        background-color:#f1bc97;
        height:100%;
        width:100%;
        float:left; 
      }

